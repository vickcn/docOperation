{
    "version": 2,
    "builds": [
        {
            "src": "src/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/convert",
            "dest": "src/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "src/app.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    },
    "functions": {
        "src/app.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
} 